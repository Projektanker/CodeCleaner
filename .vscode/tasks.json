{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "watch",
            "problemMatcher": "$tsc-watch",
            "isBackground": true,
            "presentation": {
                "reveal": "silent"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/src/projektanker.code-butler"
            },
            "dependsOn": "publish CodeButler.Console extension"
        },
        {
            "type": "npm",
            "script": "install",
            "presentation": {
                "reveal": "always",
            },
            "group": "none",
            "options": {
                "cwd": "${workspaceFolder}/src/projektanker.code-butler"
            },
            "problemMatcher": [],
        },
        {
            "label": "build CodeButler.Console",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/CodeButler/CodeButler.Console/CodeButler.Console.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish CodeButler.Console extension",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/src/CodeButler/CodeButler.Console/CodeButler.Console.csproj",
                "--output",
                "src/projektanker.code-butler/publish",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
            },
            "problemMatcher": "$msCompile"
        }
    ]
}